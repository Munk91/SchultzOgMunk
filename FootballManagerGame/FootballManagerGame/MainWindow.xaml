<Window x:Class="FootballManagerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Enter manager name:" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="10"/>
            <TextBox x:Name="managerNameTextBox" HorizontalAlignment="Center" Height="23" Margin="15,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Enter club name:" HorizontalAlignment="Center" Margin="33,10,33,0" VerticalAlignment="Top" FontSize="10"/>
            <TextBox x:Name="clubNameTextBox" HorizontalAlignment="Center" Height="23" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button Content="Create club" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Width="100" Click="generateClubButton_Click" FontWeight="Bold" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
